@model Author
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="card">
    <div class="card-heading border bottom">
        <br />
        <h4 class="card-title text-center">Yeni Yazar Ekle</h4>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-md-9 ml-auto mr-auto">
                <form asp-controller="YoneticiYazar" asp-action="Ekle" method="post" enctype="multipart/form-data" class="form-horizontal mrg-top-40 pdd-right-30 ng-pristine ng-valid">
                    <div class="form-group">
                        <br />
                        <label>Yazar Ad Soyad</label>
                        <input type="text" class="form-control kontrol" asp-for="NameSurname" placeholder="Yazar Adı Giriniz..." required>
                    </div>
                    <div class="form-group">
                        <label>Yazar Açıklama</label>
                        <textarea class="form-control" asp-for="Description" placeholder="Yazar Açıklamasını Giriniz..." rows="5" required></textarea>
                    </div>
                    <div class="form-group">
                        <label>Kullanıcı Adı</label>
                        <input type="text" class="form-control kontrol" asp-for="Username" placeholder="Kullanıcı Adı Giriniz..." required>
                    </div>
                    <div class="form-group">
                        <label>Şifre</label>
                        <input type="text" class="form-control kontrol" asp-for="Password" placeholder="Şifre Giriniz..." required>
                    </div>
                    <center><button type="submit" class="btn btn-info"><i class="fa fa-plus" aria-hidden="true"></i> Yeni Yazar Ekle</button></center><br />
                </form>
            </div>
        </div>
    </div>
</div>

