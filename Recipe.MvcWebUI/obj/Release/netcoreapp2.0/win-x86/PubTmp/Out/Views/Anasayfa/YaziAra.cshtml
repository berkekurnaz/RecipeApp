@model IEnumerable<Recipe.Entities.Concrete.Article>
@{
    ViewData["Title"] = "YaziAra";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@if(Model.Count() > 0)
{
    <br>
<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <!-- post -->
        <div class="col-md-4 text-center" style="margin-bottom:10px">
            <div class="card" style="border:1px solid black">
                <center><img style="object-fit:cover;height:200px;margin-top:5px" src="~/Makale/@item.Photo" alt=""></center>
                <h4>@item.Title</h4>
                <p>Kategori : @item.Category.CategoryName <br />Eklenme Tarihi : @item.CreatedDate</p>
                <a href="blog-ici.html" style="margin-bottom:5px;background-color:#1d1c1c" class="btn btn-info">Devamını Oku</a>
            </div>
        </div>
            <!-- /post -->
        }

    </div>
</div>
}
else
{
    <div class="container">
        <p>Bulamadım...</p>
    </div>
}

