@model Article
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<script src="https://cdn.ckeditor.com/4.12.1/standard/ckeditor.js"></script>

<div class="card">
    <div class="card-heading border bottom">
        <br />
        <h4 class="card-title text-center">Yeni Makale Ekle</h4>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-md-9 ml-auto mr-auto">
                <form asp-controller="YoneticiMakale" asp-action="Ekle" method="post" enctype="multipart/form-data" class="form-horizontal mrg-top-40 pdd-right-30 ng-pristine ng-valid">
                    <div class="form-group">
                        <br />
                        <label>Makale Başlık</label>
                        <input type="text" class="form-control kontrol" asp-for="Title" placeholder="Makale Başlığını Giriniz..." required>
                    </div>
                    <label>Makale İçerik</label>
                    <textarea name="Content" id="Content">
                       
                    </textarea>

                    <div class="form-group">
                        <label>Makale Kategori</label>
                        @Html.DropDownList("KategoriId", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <center><button type="submit" class="btn btn-info"><i class="fa fa-plus" aria-hidden="true"></i> Yeni Makale Ekle</button></center><br />
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    CKEDITOR.replace('Content');
</script>