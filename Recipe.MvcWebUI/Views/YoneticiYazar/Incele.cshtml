@model Author
@{
    ViewData["Title"] = "Incele";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="card">
    <div class="card-heading border bottom">
        <br />
        <h4 class="card-title text-center">Yazar İncele</h4>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-md-9 ml-auto mr-auto">
                <div class="form-group">
                    <br />
                    <label>Yazar Ad Soyad</label>
                    <input type="text" class="form-control kontrol" value="@Model.NameSurname" readonly>
                </div>
                <div class="form-group">
                    <label>Yazar Açıklama</label>
                    <textarea class="form-control" placeholder="Yazar Açıklamasını Giriniz..." rows="5" readonly>@Model.Description</textarea>
                </div>
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    <input type="text" class="form-control kontrol" value="@Model.Username" readonly>
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input type="text" class="form-control kontrol" value="@Model.Password" readonly>
                </div>
                <div class="form-group">
                    <label>Eklenme Tarihi</label>
                    <input type="text" class="form-control kontrol" value="@Model.CreatedDate" readonly>
                </div>
                <div class="form-group">
                    <label>Api Key</label>
                    <input type="text" class="form-control kontrol" value="@Model.ApiKey" readonly>
                </div>
                <div class="form-group">
                    <label class="text-center">Yazar Fotoğraf</label>
                    <center><img src="~/Yazar/@Model.Photo" class="rounded-circle" width="250" /></center>
                </div>
                <div class="form-group">
                    <a href="/YoneticiYazar/Index" class="btn btn-info"><i class="fa fa-arrow-left" aria-hidden="true"></i> Geriye Dön</a>
                    <a href="/YoneticiYazar/Fotograf/@Model.Id" class="btn btn-success"><i class="fa fa-camera" aria-hidden="true"></i> Yazar Fotoğraf Güncelle</a>
                </div>
            </div>
        </div>
    </div>
</div>

