
@using Microsoft.AspNetCore.Http

@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>WebMag HTML Template</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:700%7CNunito:300,600" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/TemplateMain/css/bootstrap.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/TemplateMain/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/TemplateMain/css/style.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <!-- Header -->
    <header id="header">
        <!-- Nav -->
        <div id="nav">
            <!-- Main Nav -->
            <div id="nav-fixed">
                <ul class="container">
                    <!-- logo -->
                    <div class="nav-logo">
                        <a href="/Anasayfa/Index/" class="logo">Lezzetli Sunumlarım</a>
                    </div>
                    <!-- /logo -->
                    <!-- nav -->
                    <ul class="nav-menu nav navbar-nav">
                        <li><a href="/Anasayfa/Index/">Anasayfa</a></li>
                        <li><a href="/Anasayfa/Hakkimizda/">Hakkımızda</a></li>
                        <li class="dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Tüm Kategoriler
                            </a>
                            <ul id="kategorilistesi" class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <!-- Ajax İle Buraya Kategoriler Çekilecek -->
                                @foreach (var item in Model.Categories)
                                {
                                    <li>@item.CategoryName</li>
                                }
                            </ul>
                        </li>
                        @if (HttpContextAccessor.HttpContext.Session.GetString("SessionUserId") != null)
                        {
                            <li><a href="/Uye/Profil/">Üye Profili</a></li>
                        }
                        else
                        {
                            <li><a href="/Uye/Giris/">Üye Girişi</a></li>
                        }
                        <li><a href="/Anasayfa/Iletisim/">İletişim</a></li>
                    </ul>
                    <!-- /nav -->
                    <!-- search & aside toggle -->
                    <div class="nav-btns">
                        <button class="aside-btn"><i class="fa fa-bars"></i></button>
                        <button class="search-btn"><i class="fa fa-search"></i></button>
                        <div class="search-form">
                            <input class="search-input" type="text" name="search" placeholder="Enter Your Search ...">
                            <button class="search-close"><i class="fa fa-times"></i></button>
                        </div>
                    </div>
                    <!-- /search & aside toggle -->
            </div>
        </div>
        <!-- /Main Nav -->
        <!-- Aside Nav -->
        <div id="nav-aside">
            <!-- nav -->
            <div class="section-row">
                <ul class="nav-aside-menu">
                    <li><a href="/Anasayfa/Index/">Anasayfa</a></li>
                    <li><a href="/Anasayfa/Hakkimizda/">Hakkımızda</a></li>
                    <li class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Tüm Kategoriler
                        </a>
                        <ul id="kategorilistesi2" class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <!-- Ajax İle Buraya Kategoriler Çekilecek -->
                        </ul>
                    </li>
                    @if (HttpContextAccessor.HttpContext.Session.GetString("SessionUserId") != null)
                    {
                        <li><a href="/Uye/Profil/">Üye Profili</a></li>
                    }
                    else
                    {
                        <li><a href="/Uye/Giris/">Üye Girişi</a></li>
                    }
                    <li><a href="/Anasayfa/Iletisim/">İletişim</a></li>
                </ul>
            </div>
            <!-- /nav -->
            <!-- social links -->
            <div class="section-row">
                <h3>Sosyal Medya</h3>
                <ul class="nav-aside-social">
                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                    <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                </ul>
            </div>
            <!-- /social links -->
            <!-- aside nav close -->
            <button class="nav-aside-close"><i class="fa fa-times"></i></button>
            <!-- /aside nav close -->
        </div>
        <!-- Aside Nav -->
        </div>
        <!-- /Nav -->
    </header>
    <!-- /Header -->

    @RenderBody()


    <!-- Footer -->
    <footer id="footer">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-5">
                    <div class="footer-widget">
                        <div class="footer-logo">
                            <a href="/Anasayfa/Index/" class="logo">Lezzetli Sunumlarım</a>
                        </div>
                        <ul class="footer-nav">
                            <li><a href="/Anasayfa/Hakkimizda/">Hakkımızda</a></li>
                            <li><a href="/Anasayfa/Iletisim/">İletişim</a></li>
                        </ul>
                        <div class="footer-copyright">
                            <span>
                                @DateTime.Now.Year Tarihinde Geliştirilmiştir &copy;
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="footer-widget">
                                <h3 class="footer-title">Biz Kimiz</h3>
                                <ul class="footer-links">
                                    <li><a href="/Anasayfa/Hakkimizda/">Hakkımızda</a></li>
                                    <li><a href="/Uye/Giris/">Üye Girişi</a></li>
                                    <li><a href="/Anasayfa/Iletisim/">İletişim</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="footer-widget">
                                <h3 class="footer-title">Kategoriler</h3>
                                <ul class="footer-links"></ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="footer-widget">
                        <h3 class="footer-title">Sosyal Medya</h3>
                        <ul class="footer-social">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                        </ul>
                    </div>
                </div>

            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </footer>
    <!-- /Footer -->
    <!-- jQuery Plugins -->
    <script src="~/TemplateMain/js/jquery.min.js"></script>
    <script src="~/TemplateMain/js/bootstrap.min.js"></script>
    <script src="~/TemplateMain/js/main.js"></script>


</body>
</html>
